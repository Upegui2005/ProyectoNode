<%- include ('./base/header'); %>

<main>
    <section>
        <div class="mt-3 p-5 text-dark rounded text-center">
            <img src="img/banner.jpg" alt="" id="banner">
        </div>
    </section>
    <section class="mt-3">
        <h2 class="text-center">Productos Destacados</h2>
        <div class="d-flex justify-content-around mt-3">
            <% cards.forEach(products => { %>
                <div class="card" style="width: 18rem;">
                    <img src="<%= products.image %>" class="card-img-top mx-auto my-auto" alt="">
                    <hr>
                    <div class="card-body">
                      <h5 class="card-title"><%= products.title %></h5>
                      <h6 class="card-text">$<%= products.price %></h6>
                      <p class="card-text"><%= products.category %></p>
                      <a href="#" class="btn btn-outline-dark">AÃ±adir al carrito</a>
                    </div>
                </div>
            <%}) %>
        </div>
    </section>
</main>
